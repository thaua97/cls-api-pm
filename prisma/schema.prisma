generator client {
    provider = "prisma-client"
    output   = "./generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    password_hash String
    created_at    DateTime @default(now())

    @@map("users")
}

model Project {
    id          String   @id @default(uuid())
    name        String
    description String?
    start_date  DateTime
    end_date    DateTime
    is_favorite Boolean  @default(false)
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt

    @@map("projects")
}
